{% extends("::base.html.twig") %}

{% block body %}
<h1>Software list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Description</th>
            <th>Url</th>
            <th>Opensource</th>
            <th>Demo</th>
            <th>Opensourcelicense</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('software_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.manufacturer }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.url }}</td>
            <td>{{ entity.opensource }}</td>
            <td>{{ entity.demo }}</td>
            <td>{{ entity.opensourcelicense }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('software_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('software_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('software_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}