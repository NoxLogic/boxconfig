{% extends("::base.html.twig") %}

{% block title%}Display configurations{% endblock %}

{% block body %}

<h2>Your configuration list</h2>
<p>This is a list of all the configurations you currently own</p>
<div class="container well">

    <table class="table records_list">
        <thead>
            <tr>
                <th>Machine</th>
                <th>Hardware</th>
                <th>Operating System</th>
                <th>Software count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="#">{{ entity.machine.name }}</a></td>
                <td>{{ entity.machine.hardware.name }}</td>
                <td>
                    {% if entity.virtualized %}
                        <span class="label label-info">virtualized <img title="This is a virtualized system" src="/img/ghost_icon.gif"></span>
                    {% endif %}
                    {{ entity.operatingsystem.os }}
                </td>
                <td>{{ entity.software | length }} application(s)</td>
                <td>
                    <a class="btn btn-mini btn-success" href="#">details</a>
                    <a class="btn btn-mini btn-success" href="#">edit</a>
                    <a class="btn btn-mini btn-danger" href="#">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p>
        <a class="btn btn-mini btn-success" href="{{ path('configuration_new') }}">Add a new configuration</a>
    </p>
</div>

{% endblock %}

{% block widget %}
 <div class="row">
     {% render "BoxConfigDefaultBundle:Widget:matchconfig" %}
     <div class="span1">&nbsp;</div>
     {% render "BoxConfigDefaultBundle:Widget:userpanel" %}
 </div>
{% endblock %}
